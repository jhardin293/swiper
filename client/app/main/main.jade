div(ng-include='"components/shell/shell.html"')
.cards
  ul(swing-stack)
    li(
      swing-card,
      swing-on-throwout="console.log(eventName, eventObject)",
      swing-on-throwoutleft="console.log(eventName, eventObject)",
      swing-on-throwoutright="consol.log(eventName, eventObject)",
      swing-on-throwin="throwin(eventName, eventObject)",
      swing-on-dragstart="console.log(eventName, eventObject)",
      swing-on-dragmove="dragmove(eventName, eventObject)",
      swing-on-dragend="dragend(eventName, eventObject)",
      ng-repeat="note in notes"
     )
       .card(ng-click="toogleFlip(note)", ng-class="{'flipped' : note.clicked}")
         .front
           span: h1 {{ note.front }}
         .back
           span: h1 {{ note.back }}



